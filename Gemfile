source 'https://rubygems.org'

gem 'rails', '3.2.0'

# Bundle edge Rails instead:
# gem 'rails', :git => 'git://github.com/rails/rails.git'

group :development, :test do
  gem 'sqlite3'
  gem 'rspec-rails'
  gem 'guard-rspec'  
end



# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'therubyracer'
  gem 'sass-rails',   '~> 3.2.3'
  gem 'coffee-rails', '~> 3.2.1'
  gem 'uglifier', '>= 1.0.3'
end

gem 'jquery-rails'

group :test do
  gem 'turn', :require => false
  gem 'rspec-rails'
  gem 'capybara'
  gem 'guard-spork'
  gem 'spork', '~> 0.9.0.rc'
  
  gem 'rb-inotify'
  gem 'libnotify'

end
group :production do
   gem 'pg', '0.12.2'
end

